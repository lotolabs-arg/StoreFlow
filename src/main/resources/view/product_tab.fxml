<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="5.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="infrastructure.ui.controller.ProductController">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <children>
        <Accordion expandedPane="$createPane">
            <panes>
                <TitledPane fx:id="createPane" text="Administrar Producto (Crear / Reponer)">
                    <content>
                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <TextField fx:id="barcodeField" promptText="Código de barras (Escanee o escriba)"/>
                                <TextField fx:id="nameField" promptText="Nombre del producto"/>
                                <TextArea fx:id="descriptionField" prefHeight="60.0"
                                          promptText="Descripción (Opcional)"/>

                                <HBox spacing="10.0" alignment="CENTER_LEFT">
                                    <children>
                                        <VBox spacing="2.0" HBox.hgrow="ALWAYS">
                                            <Label text="Costo Unitario" style="-fx-font-size: 10px;"/>
                                            <TextField fx:id="costField" promptText="\$ Costo"/>
                                        </VBox>

                                        <VBox spacing="2.0" HBox.hgrow="ALWAYS">
                                            <Label text="Cantidad / Stock" style="-fx-font-size: 10px;"/>
                                            <TextField fx:id="quantityField" promptText="Cant."/>
                                        </VBox>
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <Label text="Tipo:"/>
                                        <RadioButton fx:id="unitTypeUnit" text="Unidad" selected="true">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="unitTypeGroup"/>
                                            </toggleGroup>
                                        </RadioButton>
                                        <RadioButton fx:id="unitTypeKilo" text="Fraccionable"
                                                     toggleGroup="$unitTypeGroup"/>

                                        <VBox HBox.hgrow="ALWAYS"/>

                                        <Button text="Guardar / Reponer"
                                                style="-fx-background-color: lightgreen; -fx-border-color: green;"
                                                onAction="#onSaveProductClick"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </TitledPane>
            </panes>
        </Accordion>

        <Separator/>

        <HBox alignment="CENTER_LEFT" spacing="5.0">
            <children>
                <TextField promptText="Buscar producto..." HBox.hgrow="ALWAYS"/>
                <Button text="Buscar"/>
            </children>
        </HBox>

        <ListView VBox.vgrow="ALWAYS"/>
    </children>
</VBox>
